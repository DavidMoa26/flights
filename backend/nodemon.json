{
  "watch": ["src/**/*"],
  "ext": "js,mjs,json",
  "ignore": ["node_modules/**/*", "dist/**/*", "tests/**/*"],
  "exec": "node src/index.js",
  "env": {
    "NODE_ENV": "development"
  },
  "legacyWatch": true,
  "polling": true,
  "delay": 1000,
  "verbose": true,
  "restartable": "rs",
  "colours": true,
  "runOnChangeOnly": false
}